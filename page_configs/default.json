{
	"style": {
		"type": "offset"
	},
	"data": {
		"show": true,
		"field": "results"
	},
	"pageSize": {
		"show": true,
		"field": "limit",
		"default": 2,
		"maximum": 1000,
		"param": "limit"
	},
	"offset": {
		"show": true,
		"field": "offset",
		"default": 0,
		"param": "offset"
	},
	"page": {
		"show": true,
		"field": "page",
		"default": 1,
		"param": "page"
	},
	"count": {
		"show": true,
		"field": "totalCount"
	},
	"filteredCount": {
		"show": true,
		"field": "filteredCount"
	},
	"previous": {
		"show": true,
		"field": "previous"
	},
	"next": {
		"show": true,
		"field": "next"
	},
	"search": {
		"enabled": true,
		"regex": true,
		"show": true,
		"field": "filteredCount",
		"param": "search",
		"regexParam": "regex",
		"complex": {
			"enabled": true,
			"fieldKey": "fields",
			"valueKey": "value"
		}
	},
	"sort": {
		"enabled": true,
		"multi": true,
		"param": "sort",
		"directionParam": "direction",
		"directionKey": "dir",
